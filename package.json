{
  "name": "webhive",
  "version": "0.0.0-dev",
  "license": "MIT",
  "description": "",
  "main": "index.js",
  "typings": "index.d.ts",
  "author": "2019",
  "scripts": {
    "dev": "run-p dev:web",
    "harvest:d": "node --inspect-brk -r ts-node/register src/webhive.harvest/program.ts --ant=webapplog --no-save",
    "harvest:example": "npx ts-node src/webhive.harvest/program.ts --ant=everylayout --dry-run",
    "harvest": "ts-node src/webhive.harvest/program.ts",
    "dev:api": "node-dev --no-deps -- src/webhive.api/main.ts",
    "dev:api:d": "node-dev --no-deps --inspect -- src/webhive.api/main.ts",
    "dev:web": "node-dev --no-deps -- src/webhive.web/main.ts",
    "test": "npm run eslint && npm run tscheck && npm run test:r",
    "test:r": "node node_modules/mocha/bin/mocha --node_env=test -r ts-node/register -r @abraham/reflection --timeout 8s src/**/*.spec.ts",
    "test:w": "npm run test:r -- --watch-files src --watch",
    "test:d": "node --inspect-brk -r ts-node/register -r @abraham/reflection node_modules/mocha/bin/_mocha --no-timeouts --watch-extensions ts --watch src/**/*.spec.ts",
    "tscheck": "echo tscheck... && tsc --noEmit",
    "tscheck:w": "npm run tscheck -- --watch",
    "tsclint": "tsc --noEmit --strict --forceConsistentCasingInFileNames --noImplicitReturns --noImplicitThis --noUnusedLocals --noUnusedParameters",
    "tsclint:w": "npm run tsclint -- --watch",
    "eslint:w": "watchexec -w src \"npm run eslint\"",
    "eslint": "node node_modules/eslint/bin/eslint src/webhive.api src/webhive.web src/webhive.harvest --ext ts",
    "eslint:fix": "eslint src --ext ts --fix",
    "lint:w": "run-p tsclint:w eslint:w",
    "prepublishOnly": "sed -i -e 's/devDependencies/_devDependencies/g' package.json",
    "copySource": "cp -rv src dist && find dist/src -name '*.spec.ts' | xargs rm -f",
    "build": "sh Taskfile build",
    "commit": "git-cz",
    "rebuild_lock": "rm package-lock.json && npm prune && npm install",
    "typesync": "npx typesync"
  },
  "dependencies": {
    "@abraham/reflection": "^0.10.0",
    "await-to-js": "^2.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "convict": "^6.2.3",
    "dayjs": "^1.11.2",
    "delay": "^5.0.0",
    "feedparser": "^2.2.10",
    "got": "^12.5.3",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-favicon": "^2.1.0",
    "koa-json-error": "^3.1.2",
    "koa-mount": "^4.0.0",
    "koa-static": "^5.0.0",
    "koa-tree-router": "^0.6.0",
    "longjohn": "^0.2.12",
    "mongodb": "^4.6.0",
    "ms": "^2.1.3",
    "njct": "^8.1.0",
    "striptags": "^3.2.0",
    "tslib": "^2.4.0",
    "vhtml": "^2.2.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/convict": "^6.1.1",
    "@types/eslint": "^8.4.2",
    "@types/expect": "^24",
    "@types/feedparser": "^2.2.5",
    "@types/got": "^9.6.12",
    "@types/html-entities": "^1.3.3",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/koa-favicon": "^2.0.21",
    "@types/koa-json-error": "^3.1.4",
    "@types/koa-mount": "^4.0.1",
    "@types/koa-static": "^4.0.2",
    "@types/mocha": "^9.1.1",
    "@types/mongodb": "^4.0.7",
    "@types/ms": "^0.7.31",
    "@types/node": "^17.0.35",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.15.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-only-warn": "^1.0.3",
    "eslint-plugin-unicorn": "^42.0.0",
    "expect": "^1.X",
    "html-entities": "^1.3.1",
    "into-stream": "^5.1.1",
    "koa-preuse": "^0.0.0",
    "koa-sham": "^0.0.11",
    "mocha": "^10.0.0",
    "mongodb-memory-server": "^6.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.2",
    "request": "2.88.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "watchexec-bin": "^1.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "heroku-run-build-script": true
}
